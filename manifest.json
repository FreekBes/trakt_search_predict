{
    "manifest_version": 2,
    "name": "Search Predict for Trakt.tv",
    "short_name": "Search Predict for Trakt",
    "version": "1.0.0",
    "version_name": "1.0.0",
    "description": "This extension adds search predictions (autocomplete) to the search bar in the header of Trakt.tv",
    "icons": {
		"16": "images/logo16.png",
		"32": "images/logo32.png",
        "48": "images/logo48.png",
        "96": "images/logo96.png",
		"128": "images/logo128.png"
	},
	"permissions": [
        "*://*.trakt.tv/*",
        "storage"
    ],

    "content_scripts": [
        {
            "matches": ["*://*.trakt.tv/*"],
            "js": ["search_predict.js"],
            "css": ["search_predict.css"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "omnibox": {
        "keyword": "t"
    }
}